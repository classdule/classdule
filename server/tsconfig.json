{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@app": ["./src/app/*"],
      "@infra": ["./src/infra/*"],
      "@test": ["./test/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
